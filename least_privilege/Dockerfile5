FROM golang:alpine
RUN addgroup -S appgroup \
    && adduser -S appadmin -G appgroup -h /home/appadmin \
    && adduser -S appuser -G appgroup -h /home/appuser
COPY app.go /app/app.go
RUN chown -R appadmin:appgroup /app
RUN chmod a-w /etc

USER appadmin
WORKDIR /app
RUN CGO_ENABLED=0 go build app.go

USER appuser

ENTRYPOINT /app/app